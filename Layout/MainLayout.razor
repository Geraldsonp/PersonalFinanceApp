@inherits LayoutComponentBase
@inject IJSRuntime Js

<div class="page">
    <SideBar></SideBar>

    <main>
        <div>
            <TopNav></TopNav>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool isFirstRender)
    {
        if (isFirstRender)
        {
            await Js.InvokeVoidAsync("window.initializeFlowbite");
        }
    }
}