@inject LoadingService LoadingService


<div class="fixed inset-0 bg-gray-900 bg-opacity-50 z-50 flex justify-center items-center transition-opacity duration-300 ease-in-out @(LoadingService.IsLoading ? "opacity-100" : "opacity-0 pointer-events-none")">
    <div class="loader"></div>
</div>
   

@code {

    protected override void OnInitialized()
    {
        LoadingService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        LoadingService.OnChange -= StateHasChanged;
    }

}